            ComboBox2.SelectedIndex = -1
            ComboBox3.SelectedIndex = -1
            DateTimePicker1.Value = DateTime.Now
        Catch ex As MySqlException
            MsgBox(ex.Message)
        Catch ex As Exception
            MsgBox(ex.Message)

        End Try
        conn.Close()
    End Sub

